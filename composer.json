{
    "name": "javanile/php-gemstone",
    "description": "PHP Gemstone skeleton application for rapid development",
    "keywords": [
        "microframework",
        "rest",
        "router",
        "psr7"
    ],
    "homepage": "https://github.com/javanile/php-gemstone",
    "license": "MIT",
    "authors": [
        {
            "name": "Francesco Bianco",
            "email": "bianco@javanile.org",
            "homepage": "https://www.javanile.org/"
        },
        {
            "name": "Josh Lockhart",
            "email": "info@joshlockhart.com",
            "homepage": "https://www.joshlockhart.com/"
        },
        {
            "name": "Pierre Berube",
            "email": "pierre@lgse.com",
            "homepage": "https://www.lgse.com/"
        }
    ],
    "require": {
        "php": "^7.2 || ^8.0",
        "ext-json": "*",
        "propel/propel": "~2.0@dev",
        "monolog/monolog": "^2.2",
        "php-di/php-di": "^6.3",
        "slim/psr7": "^1.6",
        "slim/slim": "^4.7",
        "slim/twig-view": "^3.2",
        "javanile/php-sheetbase": "0.1.0"
    },
    "require-dev": {
        "jangregor/phpstan-prophecy": "^0.8.1",
        "phpstan/extension-installer": "^1.1.0",
        "phpstan/phpstan": "^0.12.85",
        "phpunit/phpunit": "^8.0 || ^9.0"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/app"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/app"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }
}
